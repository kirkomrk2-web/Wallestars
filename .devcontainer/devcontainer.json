{
  "name": "Wallestars Development - Full Stack AI Automation",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true,
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true,
      "installJupyterlab": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": true,
      "moby": true
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "latest",
      "installUsingApt": true
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest",
      "profile": "default"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "saoudrizwan.claude-dev",
        "continue.continue",
        "github.copilot",
        "github.copilot-chat",
        "github.copilot-labs",
        "amazonwebservices.aws-toolkit-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",
        "xabikos.javascriptsnippets",
        "ms-vscode.vscode-typescript-next",
        "wallabyjs.quokka-vscode",
        "wix.vscode-import-cost",
        "christian-kohler.npm-intellisense",
        "burkeholland.simple-react-snippets",
        "formulahendry.auto-rename-tag",
        "formulahendry.auto-close-tag",
        "zignd.html-css-class-completion",
        "styled-components.vscode-styled-components",
        "graphql.vscode-graphql",
        "graphql.vscode-graphql-syntax",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "donjayamanne.githistory",
        "mhutchie.git-graph",
        "github.vscode-github-actions",
        "orta.vscode-jest",
        "firsttris.vscode-jest-runner",
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "sonarsource.sonarlint-vscode",
        "ms-vscode.test-adapter-converter",
        "hbenl.vscode-test-explorer",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "mtxr.sqltools-driver-mysql",
        "mtxr.sqltools-driver-sqlite",
        "mongodb.mongodb-vscode",
        "supabase.supabase",
        "prisma.prisma",
        "humao.rest-client",
        "rangav.vscode-thunder-client",
        "42crunch.vscode-openapi",
        "42crunch.vscode-openapi-security",
        "quicktype.quicktype",
        "juanblanco.solidity",
        "nomic-foundation.hardhat-solidity",
        "tintinweb.solidity-visual-auditor",
        "tintinweb.vscode-solidity-language",
        "hashicorp.terraform",
        "ms-vscode.azure-account",
        "ms-azuretools.vscode-azureresourcegroups",
        "trunk.io",
        "snyk-security.snyk-vulnerability-scanner",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "redhat.vscode-xml",
        "hashicorp.hcl",
        "christian-kohler.path-intellisense",
        "visualstudioexptteam.vscodeintellicode",
        "visualstudioexptteam.intellicode-api-usage-examples",
        "gruntfuggly.todo-tree",
        "aaron-bond.better-comments",
        "wayou.vscode-todo-highlight",
        "alefragnani.bookmarks",
        "alefragnani.project-manager",
        "fabiospampinato.vscode-commands",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "bierner.markdown-preview-github-styles",
        "bierner.markdown-mermaid",
        "tchayen.markdown-links",
        "pkief.material-icon-theme",
        "github.github-vscode-theme",
        "zhuangtongfa.material-theme",
        "oderwat.indent-rainbow",
        "naumovs.color-highlight",
        "ritwickdey.liveserver",
        "ms-vscode.live-server",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "randomfractalsinc.vscode-data-preview",
        "janisdd.vscode-edit-csv",
        "mikestead.dotenv",
        "irongeek.vscode-env",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-wsl",
        "ms-vsliveshare.vsliveshare",
        "ms-vsliveshare.vsliveshare-audio",
        "waderyan.nodejs-extension-pack",
        "chouzz.vscode-better-align"
      ],
      
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrap": "on",
        "editor.minimap.enabled": true,
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": "active",
        "editor.inlineSuggest.enabled": true,
        "editor.suggestSelection": "first",
        "editor.snippetSuggestions": "top",
        "editor.linkedEditing": true,
        "editor.cursorBlinking": "smooth",
        "editor.smoothScrolling": true,
        "editor.fontLigatures": true,
        "editor.fontSize": 14,
        "editor.lineHeight": 22,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.exclude": {
          "**/.git": true,
          "**/.svn": true,
          "**/.hg": true,
          "**/CVS": true,
          "**/.DS_Store": true,
          "**/node_modules": true,
          "**/.next": true,
          "**/dist": true,
          "**/build": true,
          "**/.cache": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontSize": 14,
        "terminal.integrated.fontFamily": "MesloLGS NF",
        "terminal.integrated.cursorBlinking": true,
        "terminal.integrated.cursorStyle": "line",
        "terminal.integrated.tabs.enabled": true,
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact",
          "vue",
          "html"
        ],
        "eslint.alwaysShowStatus": true,
        "eslint.format.enable": true,
        "eslint.lintTask.enable": true,
        "prettier.singleQuote": true,
        "prettier.trailingComma": "es5",
        "prettier.semi": true,
        "prettier.tabWidth": 2,
        "prettier.useTabs": false,
        "prettier.printWidth": 100,
        "prettier.arrowParens": "avoid",
        "javascript.updateImportsOnFileMove.enabled": "always",
        "javascript.suggest.autoImports": true,
        "javascript.suggest.completeFunctionCalls": true,
        "typescript.updateImportsOnFileMove.enabled": "always",
        "typescript.suggest.autoImports": true,
        "typescript.suggest.completeFunctionCalls": true,
        "typescript.preferences.importModuleSpecifier": "relative",
        "git.autofetch": true,
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.pruneOnFetch": true,
        "git.fetchOnPull": true,
        "git.rebaseWhenSync": true,
        "gitlens.codeLens.enabled": true,
        "gitlens.currentLine.enabled": true,
        "gitlens.hovers.enabled": true,
        "gitlens.blame.highlight.enabled": true,
        "claude-dev.apiKey": "${ANTHROPIC_API_KEY}",
        "claude-dev.model": "claude-sonnet-4-20250514",
        "claude-dev.maxTokens": 1000000,
        "claude-dev.temperature": 0.7,
        "claude-dev.enableContextWindow": true,
        "claude-dev.autoSave": true,
        "continue.telemetryEnabled": false,
        "continue.enableTabAutocomplete": true,
        "github.copilot.enable": {
          "*": true,
          "yaml": true,
          "plaintext": false,
          "markdown": true,
          "json": true,
          "jsonc": true
        },
        "github.copilot.advanced": {
          "inlineSuggestCount": 3
        },
        "supabase.projectRef": "${SUPABASE_PROJECT_REF}",
        "supabase.accessToken": "${SUPABASE_ACCESS_TOKEN}",
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true,
          "**/.hg/store/**": true,
          "**/.keepass/**": true,
          "**/.secrets/**": true
        },
        "sqltools.useNodeRuntime": true,
        "solidity.compileUsingRemoteVersion": "latest",
        "solidity.enabledAsYouTypeCompilationErrorCheck": true,
        "solidity.validationDelay": 1500,
        "workbench.colorTheme": "GitHub Dark Default",
        "workbench.iconTheme": "material-icon-theme",
        "workbench.productIconTheme": "material-product-icons",
        "workbench.startupEditor": "welcomePage",
        "workbench.editor.enablePreview": false,
        "workbench.editor.highlightModifiedTabs": true,
        "errorLens.enabledDiagnosticLevels": [
          "error",
          "warning",
          "info"
        ],
        "errorLens.fontSize": "13",
        "search.exclude": {
          "**/node_modules": true,
          "**/bower_components": true,
          "**/*.code-search": true,
          "**/dist": true,
          "**/build": true,
          "**/.next": true,
          "**/.cache": true
        },
        "jest.autoRun": "off",
        "jest.showCoverageOnLoad": false,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "docker.showStartPage": false,
        "liveshare.anonymousGuestApproval": "prompt",
        "liveshare.guestApprovalRequired": true,
        "todo-tree.general.tags": [
          "BUG",
          "HACK",
          "FIXME",
          "TODO",
          "XXX",
          "REVIEW",
          "OPTIMIZE",
          "SECURITY",
          "DEPRECATED"
        ]
      }
    }
  },

  "forwardPorts": [3000, 3001, 5000, 5678, 8000, 8080, 8545, 9000, 54321],
  "portsAttributes": {
    "3000": {
      "label": "Frontend (React/Next.js)",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Frontend Alternative",
      "onAutoForward": "silent"
    },
    "5000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "5678": {
      "label": "n8n Workflow Engine",
      "onAutoForward": "notify",
      "protocol": "https"
    },
    "8000": {
      "label": "Python Server",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "Dev Server / Proxy",
      "onAutoForward": "silent"
    },
    "8545": {
      "label": "Local Blockchain (Hardhat/Ganache)",
      "onAutoForward": "silent"
    },
    "9000": {
      "label": "Additional Service",
      "onAutoForward": "silent"
    },
    "54321": {
      "label": "Supabase Local",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "bash .devcontainer/startup.sh",
  "postAttachCommand": "bash .devcontainer/attach.sh",
  
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "updateRemoteUserUID": true,
  
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,readonly,type=bind,consistency=cached"
  ],
  
  "containerEnv": {
    "NODE_ENV": "development",
    "ENVIRONMENT": "development",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "GITHUB_ENTERPRISE": "true",
    "GITHUB_SPARKS_ENABLED": "true",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "CLAUDE_MODEL": "claude-sonnet-4-20250514",
    "CLAUDE_MAX_TOKENS": "1000000",
    "SUPABASE_URL": "${localEnv:SUPABASE_URL}",
    "SUPABASE_KEY": "${localEnv:SUPABASE_KEY}",
    "SUPABASE_SERVICE_ROLE_KEY": "${localEnv:SUPABASE_SERVICE_ROLE_KEY}",
    "SUPABASE_PROJECT_REF": "${localEnv:SUPABASE_PROJECT_REF}",
    "SUPABASE_DB_PASSWORD": "${localEnv:SUPABASE_DB_PASSWORD}",
    "N8N_HOST": "localhost",
    "N8N_PORT": "5678",
    "N8N_PROTOCOL": "https",
    "N8N_BASIC_AUTH_ACTIVE": "true",
    "UBUNTU_PRO_ENABLED": "true",
    "UBUNTU_PRO_TOKEN": "${localEnv:UBUNTU_PRO_TOKEN}",
    "VPS_COUNT": "15",
    "VPS_FREE_COUNT": "5",
    "VPS_BONUS_COUNT": "10",
    "ETHEREUM_RPC": "${localEnv:ETHEREUM_RPC}",
    "POLYGON_RPC": "${localEnv:POLYGON_RPC}",
    "SOLANA_RPC": "${localEnv:SOLANA_RPC}",
    "BSC_RPC": "${localEnv:BSC_RPC}",
    "KEEPASS_DB_PATH": "/home/vscode/.keepass/wallestars.kdbx",
    "TAILS_PERSISTENT_STORAGE": "/home/vscode/.tails-persistent",
    "TZ": "Europe/Sofia"
  },
  
  "capAdd": [
    "SYS_PTRACE"
  ],
  
  "securityOpt": [
    "seccomp=unconfined"
  ],
  
  "runArgs": [
    "--network=host"
  ],
  
  "overrideCommand": false,
  "waitFor": "postCreateCommand",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached"
}
