# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here

# Social Media - Telegram
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash
TELEGRAM_BOT_TOKEN=your-bot-token-if-applicable

# Social Media - Instagram
INSTAGRAM_USERNAME=your-instagram-username
INSTAGRAM_PASSWORD=your-instagram-password

# Social Media - Facebook
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# Hostinger Horizon (Website Builder)
HORIZON_API_KEY=your-horizon-api-key

# Google Services
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# Email Services
EMAIL_PROVIDER=gmail
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# VPS Monitoring
VPS_MONITORING_API_KEY=your-monitoring-api-key
VPS_ALERT_EMAIL=alerts@example.com

# Phone Numbers Services
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
SMS_ACTIVATE_API_KEY=your-sms-activate-key

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Eva Configuration
EVA_CONFIG_PATH=eva-core/config/eva-config.json
EVA_MAX_SESSIONS=50

# Eva Reporting & Analytics
REPORT_EMAIL=reports@your-domain.com

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-32-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
