{
  "name": "instagram-daily-automation",
  "description": "Ежедневна автоматизация за Instagram профил",
  "version": "1.0.0",
  "note": "Environment variables like ${REPORT_EMAIL} should be defined in .env file. See .env.example for all required variables.",
  "eva_config": {
    "personality": "friendly",
    "tone": "casual",
    "language": "bg"
  },
  "schedule": {
    "enabled": true,
    "timezone": "Europe/Sofia",
    "tasks": [
      {
        "name": "morning_post",
        "time": "09:00",
        "action": "create_post",
        "params": {
          "type": "image",
          "caption_prompt": "Създай вдъхновяващ пост за добро утро",
          "hashtags": ["#goodmorning", "#motivation", "#bulgaria"]
        }
      },
      {
        "name": "afternoon_stories",
        "time": "14:00",
        "action": "create_story",
        "params": {
          "type": "poll",
          "question": "Каква е любимата ви част от деня?"
        }
      },
      {
        "name": "evening_engagement",
        "time": "19:00",
        "action": "engage",
        "params": {
          "like_followers_posts": true,
          "comment_on_hashtag": "#photography",
          "max_interactions": 50
        }
      },
      {
        "name": "night_dm_responses",
        "time": "21:00",
        "action": "respond_to_messages",
        "params": {
          "max_responses": 20,
          "use_ai": true,
          "personality": "helpful"
        }
      }
    ]
  },
  "automation_rules": {
    "post_creation": {
      "generate_caption": true,
      "add_location": true,
      "tag_users": false,
      "auto_hashtags": true,
      "max_hashtags": 15
    },
    "engagement": {
      "auto_like": {
        "enabled": true,
        "criteria": ["followers", "hashtag_followers"],
        "limit_per_hour": 30
      },
      "auto_comment": {
        "enabled": true,
        "only_on_hashtags": ["#photography", "#art", "#travel"],
        "use_templates": false,
        "generate_unique": true,
        "limit_per_hour": 10
      },
      "auto_follow": {
        "enabled": false,
        "criteria": ["engaged_with_posts"],
        "limit_per_day": 50
      }
    },
    "dm_handling": {
      "auto_respond": true,
      "response_delay_minutes": [5, 15],
      "response_delay_note": "Random delay between 5 and 15 minutes",
      "classify_messages": true,
      "priority_keywords": ["order", "buy", "price", "urgent"],
      "escalate_to_human": ["complaint", "refund", "technical_issue"]
    }
  },
  "content_generation": {
    "sources": {
      "ai_generation": true,
      "content_calendar": true,
      "user_submitted": false
    },
    "image_sources": {
      "unsplash": true,
      "generated_ai": false,
      "local_library": true
    },
    "caption_style": {
      "length": "medium",
      "emojis": "moderate",
      "call_to_action": true,
      "questions": true
    }
  },
  "analytics": {
    "track_engagement": true,
    "daily_report": true,
    "report_email": "${REPORT_EMAIL}",
    "metrics": [
      "likes",
      "comments",
      "shares",
      "saves",
      "followers_gained",
      "reach",
      "impressions"
    ]
  },
  "safety": {
    "max_actions_per_hour": 60,
    "random_delays": true,
    "human_simulation": true,
    "detect_shadowban": true,
    "auto_pause_on_issues": true
  }
}
