{
  "mcpServers": {
    "wallestars-control": {
      "command": "node",
      "args": [
        "server/index.js"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "PORT": "3000",
        "NODE_ENV": "production",
        "ENABLE_COMPUTER_USE": "true",
        "ENABLE_ANDROID": "false",
        "SCREENSHOT_INTERVAL": "2000",
        "ADB_HOST": "localhost",
        "ADB_PORT": "5037",
        "WS_PORT": "3001"
      }
    }
  }
}
